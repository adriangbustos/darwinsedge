rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reservations collection
    match /reservations/{reservationId} {
      // Allow users to read their own reservations
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Only the server (admin SDK) can write reservations
      // This ensures pricing integrity - users cannot create/modify reservations directly
      allow write: if false;
    }
    
    // Users collection (if needed for profile data)
    match /users/{userId} {
      // Users can read and update their own profile
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Only allow create if the user is creating their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Never allow delete
      allow delete: if false;
    }
  }
}
